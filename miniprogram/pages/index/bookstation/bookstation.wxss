.page{
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.body{
  display: flex;
  flex-direction: column;
   margin: 10rpx 10rpx 10rpx 10rpx;
}

.author{
  width: 100%;
  height: 100rpx;
  font-size: small;
  display: flex;
  flex-direction: row;
}
.username{
  padding:40rpx 10rpx;
}
.content{
   width: 100%;
  font-size: small;
  padding: 10rpx;
}
.contnet-img{
  display: flex;
  flex-direction: row;
}
.image{
  width: 220rpx;
  height: 220rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.date-content{
  font-size: xx-small;
}

.comment-image{
  position: absolute;
  right: 70rpx;
  margin-bottom: 40rpx;
  width: 50rpx;
  height: 50rpx;
}
.comment-count{
   position: absolute;
  right: 20rpx;
  margin-bottom: 10rpx;
  font-size: small;
}

.date-comment{
  display: flex;
  flex-direction: row;
}
.comment-content{
  font-size: small;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
/*分割线样式*/
.divLine{
 background: #E0E3DA;
 width: 100%;
 height: 5rpx;
 margin-top: 40rpx;
}

.save-bottom{
  width: 100%;
  height: 110rpx;
}
.userinfo-avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}
.icon-publish{
    width: 120rpx;
    height: 120rpx;
    position: fixed;
    bottom: 15rpx;
    right: 20rpx;
    z-index: 100;
}
.input_null{
    color: #C9C9C9;
}

.release{
    display: flex;
    align-items: flex-end; /*底部对齐*/
    justify-content: space-between; /*两端对齐*/
    box-sizing: border-box;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 18rpx 0 18rpx 30rpx;
    background-color: #F7F8F7;
    font-size: 28rpx;
    z-index: 999;
}
.release .text{
    width: 500rpx;
    min-height: 34rpx;
    max-height: 102rpx; /*最多显示三行*/
    border-width: 15rpx 20rpx; /*使用padding与预期留白不一致，故使用border*/
    border-style: solid;
    border-color:  #ffffff;
    line-height: 34rpx;
    font-size: 28rpx;
    background-color: #ffffff;
    border-radius: 4rpx;
}
