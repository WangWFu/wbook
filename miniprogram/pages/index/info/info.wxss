/* miniprogram/pages/index/info/info.wxss */
.card {
    border: 2px solid #ffffff;
    border-radius: 5px;
    background-color: #F5F5DC;
    box-shadow: 4px 1px 1px #cccccc;
    margin: 8px;
    position: relative;
}

.image {
    width: 100%;
    height: 200px;
}

.time {
    float: right;
    margin-top: 170px;
    color: #ffffff;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 1;
    font-size: 12px;
}
